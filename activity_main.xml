<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192E3E"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:text=""
        android:textColor="#0000ff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#83CAAB"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="AC"
            android:textColor="#FF0000"
            android:textSize="30dp" />

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="reg"
            android:textColor="#FF0000"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/eleva"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="^"
            android:textColor="#FF0000"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="/"
            android:textColor="#FF0000"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/siete"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="7"
            android:textColor="#3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/ocho"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="8"
            android:textColor="#FF3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/nuev"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="9"
            android:textColor="#FF3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/mult"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="X"
            android:textColor="#FF0000"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cuatro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="4"
            android:textColor="#3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/cinco"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="5"
            android:textColor="#FF3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/seis"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="6"
            android:textColor="#FF3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/restar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="-"
            android:textColor="#FF0000"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/uno"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="1"
            android:textColor="#3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/dos"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="2"
            android:textColor="#FF3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/tres"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="3"
            android:textColor="#FF3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/sumar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="+"
            android:textColor="#FF0000"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/punto"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="."
            android:textColor="#3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/cero"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="0"
            android:textColor="#FF3F51B5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="ANS"
            android:textColor="#FF3F51B5"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/igual"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#706C6C"
            android:onClick="ButtonClick"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="60dp"/>

    </LinearLayout>

</LinearLayout>